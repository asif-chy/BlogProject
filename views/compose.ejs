<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="blogPostTitle">Title</label>
    <input class="form-control" type="text" id="blogPostTitle" name="postTitle">
  </div>
  <div class="form-group">
    <label for="blogPostText">Post</label>
    <textarea class="form-control" name="postText" id="blogPostText"></textarea>
  </div>
  <button class="btn composeButton" type="submit" name="button">Submit</button>
</form>
